@import url('//fonts.googleapis.com/css?family=Alegreya|Bree+Serif|Roboto|Bentham|Merriweather')
lfa-framework()

@import _colors
@import jsxgraph

// overwrite some general css elements

h1, h2, h3, h4, h5
  font-family: serif

.bree
  font-family: 'Bree Serif'

.bentham
  font-family: Bentham

.alegreya
  font-family: Alegreya

.roboto
  font-family: Roboto

.merriweather
  font-family: Merriweather


.welcome
  background-color: black
  h1
    padding-left: 2em
    padding-bottom: 2em

.ex
  background-color: flat_clouds
  padding: 0.4em
  color: black
  margin-top: 1.8em
  border-radius: 10px

  &.conicsections
    background-color: flat_wet_asphalt
    color: white

    .label
      &.label-danger
        margin-right: 0em
        font-family: sans-serif

  .nr
    font-family: Alegreya
    background-color: flat_pomegranate
    color: white
    display: block
    height: 2em
    width: 2em
    line-height: 2em
    border-radius: 1.5em
    margin: 0 auto
    text-align: center;
    font-size: 1.8em;
    transform: translate3d(0, -50%, 0)

    + p
      margin-top: 0
  h1, h2, h3, h4
    margin-top: 0px

  ol
    list-style-type: lower-latin
    li
      min-height: 2em

.label
  &.label-danger
    margin-right: 1em
    font-family: sans-serif
    font-size: 0.7em

.MathJax_Preview
  overflow: scroll
  width: 100%

.MathJax_Zoom
  overflow: inherit
